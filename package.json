{
    "name": "typographic-orphan",
    "version": "1.0.0",
    "description": "Eliminates orphans in blocks of text.",
    "main": "index.es5.js",
    "scripts": {
      "coverage": "istanbul cover _mocha -- --require babel/register",
      "precoveralls": "npm run coverage",
      "coveralls": "coveralls < coverage/lcov.info",
      "test": "mocha --require babel/register",
      "tdd": "mocha --require babel/register --watch",
      "precommit": "npm test",
      "transpile": "babel index.js > index.es5.js",
      "prepublish": "npm run transpile",
      "postpublish": "rm *.es5.js && git push --follow-tags"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/benjaminsehl/typographic-orphan"
    },
    "keywords": [
      "typographic",
      "orphan",
      "textr"
    ],
    "author": "Benjamin Sehl <ben@sehl.ca> (http://sehl.ca/)",
    "license": "MIT",
    "bugs": {
      "url": "https://github.com/benjaminsehl/typographic-orphan/issues"
    },
    "homepage": "https://github.com/benjaminsehl/typographic-orphan",
    "devDependencies": {
      "babel": "^5.0.0",
      "coveralls": "^2.11.2",
      "husky": "^0.7.0",
      "istanbul": "^0.3.11",
      "mocha": "^2.2.1",
      "mocha-lcov-reporter": "0.0.2"
    }
  }